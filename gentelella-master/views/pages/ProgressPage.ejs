<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <%- include ./nav.ejs %>
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>Review Evidences and Progress Page</h3>
                         
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                               
                                
                                <table class="table table-bordered">
                                    <thead>
                                        <th>MeasurementID</th>
                                        <th>Measurement</th>
                                        <th>Description</th>
                                        <th>Group Assigned</th>
                                        <th>Quality Target and Progress</th>
                                        <th></th>
                                    </thead>
                                    <tbody>
                                        <% for (var measurements of data) { %>
                                            <% for(var groups of dataC) { %>
                                                <% if (measurements.GroupAssigned == groups.Group_ID) { %>
                                        <tr>
                                            <td><%= measurements.measurement_ID %></td>
                                            <td><%= measurements.measurement_Name %></td>
                                            <td><%= measurements.measurement_Description %></td>
                                            <td>
                                                
                                                    <%= groups.Group_Name %>
                                                
                                            </td>
                                            <td>
                                                <% for(var targets of dataB) { %>
                                                    <% if(targets.measurementID == measurements.measurement_ID) { %>
                                                        <%= targets.target %> - <%= targets.progress %> <br>
                                                    <% } %>
                                                <% } %>
                                            </td>
                                            <td>
                                                <form method="GET" action="ProgressDetailsPage">
                                                    <input type="hidden" name="MID" id="MID" value="<%= measurements.measurement_ID %>">
                                                    <button class="btn btn-primary">Review Evidence and Declare Progress</button>
                                                </form>
                                            </td>                                            
                                        </tr>
                                        <% } %>
                                            <% } %>
                                        <% } %>
                                    </tbody>
                                </table>
                                
                            </div>
                        </div>
                    </div>
                </div>


                <!-- /page content -->

                <!-- footer content -->
                <footer>
                    <div class="pull-right">
                        Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
                    </div>
                    <div class="clearfix"></div>
                </footer>
                <!-- /footer content -->
            </div>
        </div>

