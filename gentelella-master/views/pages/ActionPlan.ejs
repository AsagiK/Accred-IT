<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <%- include ./nav.ejs %> 
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="clearfix"></div>
                <div role="main">
                    <div class="">
                        <div class="page-title">
                            <div class="title_left">

                                <h3>ACTION PLAN  </h3> 

                            </div>
                        </div>
                    </div>  
                    <div class="clearfix"></div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_content">

                                    <!-- start accordion    --> 

                                    <% for (var meas of dataE) { %> 
                                        
                                    <div class="accordion" id="accordion" role="tablist" aria-multiselectable="true">
                                        <div class="panel">
                                            <a class="panel-heading" role="tab" id="headingOne" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= meas.measurement_ID %>" aria-expanded="true" aria-controls="collapse<%= meas.measurement_ID %>">
                                                <h4 class="panel-title">
                                                    MEASUREMENT NAME: <%= meas.measurement_Name %> 
                                                </h4>

                                            </a>      
                                            <div id="collapse<%= meas.measurement_ID %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                                                <input type="hidden" name="MID" value="<%= meas.measurement_ID %>">   
                                                
                                                <br>
                                                <% for (var act of data) { %>
                                                <% if (act.completed == 0 && act.measurement_ID == meas.measurement_ID) { %>
                                                 
                                                <div class="panel-body">
                                                    <!--Group 1 table-->

                                                    <div class="panel">

                                                        <a class="panel-heading" role="tab" id="HeadGroupOne" data-toggle="collapse" data-parent="#headingOne" href="#Collapse<%= act.activity_ID %>" aria-expanded="true" aria-controls="Collapse<%= act.activity_ID %>">
                                                            <h3 class="panel-title">
                                                                Activities: <%= act.activity_name %>
                                                            </h3>
                                                        </a>
                                                        <div id="Collapse<%= act.activity_ID %>" class="collapse">


                                                            <table class="table table-bordered">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Activity Name</th>
                                                                        <th>Description</th>
                                                                        <th>Weight</th>    
                                                                        <th></th>
                                                                        <th></th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>


                                                                    <tr>

                                                                        <td><%= act.activity_name %></td>
                                                                        <td><%= act.description %></td>
                                                                        <td><%= act.current_Score %></td>
                                                                        <td>
                                                                            <% if (act.completed == 0 && act.current_Score == 0) { %>
                                                                            <!BUTTONS FOR CREATING ACTION PLANS>
                                                                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".cap">
                                                                                Create Action Plan
                                                                            </button> 
                                                                            <% } else if (act.completed == 0 && act.current_Score > 0 ) { %>
                                                                            <button type="button" class="btn btn-primary">Remove</button>
                                                                             <% } %>
                                                                        </td>
                                                                    </tr>


                                                                </tbody>
                                                            </table>



                                                        </div>

                                                    </div>
                                                </div>

                                                <!--End of Group 1 Table -->
                                                <% } %> 
                                                <% } %>
                                                
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                </div> 
                                
                            </div>
                        </div>
                    </div>


                    <!-- /page content -->

                    <!--Modal for Create Action Plan -->
                    <div class="modal fade cap" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal3" value="Edit">
                                        <span aria-hidden="true">Ã—</span>
                                    </button>
                                    <h4 class="modal-title" id="myModalLabel3">Create Action Plan</h4>
                                </div>
                                <div class="modal-body"> 
                                    <!-- Add controller for action "addActionPlan"-->
                                    <form id="CreateActionPlan" data-parsley-validate class="form-horizontal form-label-left" action="addActionPlan" method="POST">
                                    <!--Text Area for Action Steps-->
                                    <div class="form-group">
                                        <label for="actionPlan" class="control-label col-md-3 col-sm-3 col-xs-12">Action Plan Steps:
                                            <span class="required">*</span></label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <textarea class="form-control" rows="3" id="actionPlan" name="actionPlan" placeholder="Insert Steps Here" required="required" onkeyup="textAreaAdjust(this)" style="overflow:hidden"></textarea>
                                        </div>
                                    </div>
                                        
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">
                                                Close
                                            </button>
                                            <button type="submit" class="btn btn-primary" form="CreateCycle">
                                                Submit
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- footer content -->
                    <footer>
                        <div class="pull-right">
                            Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
                        </div>
                        <div class="clearfix"></div>
                    </footer>
                    <!-- /footer content -->
                </div>
            </div>

            <!script for dynamic text area>
        <script>
            function textAreaAdjust(o) {
                o.style.height = "1px";
                o.style.height = (25 + o.scrollHeight) + "px";
            }

        </script>

            <!-- jQuery -->
            <script src="assets/vendors/jquery/dist/jquery.min.js"></script>
            <!-- Bootstrap -->
            <script src="assets/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
            <!-- FastClick -->
            <script src="assets/vendors/fastclick/lib/fastclick.js"></script>
            <!-- NProgress -->
            <script src="assets/vendors/nprogress/nprogress.js"></script>
            <!-- bootstrap-progressbar -->
            <script src="assets/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
            <!-- iCheck -->
            <script src="assets/vendors/iCheck/icheck.min.js"></script>
            <!-- bootstrap-daterangepicker -->
            <script src="assets/vendors/moment/min/moment.min.js"></script>
            <script src="assets/vendors/bootstrap-daterangepicker/daterangepicker.js"></script>
            <!-- bootstrap-wysiwyg -->
            <script src="assets/vendors/bootstrap-wysiwyg/js/bootstrap-wysiwyg.min.js"></script>
            <script src="assets/vendors/jquery.hotkeys/jquery.hotkeys.js"></script>
            <script src="assets/vendors/google-code-prettify/src/prettify.js"></script>
            <!-- jQuery Tags Input -->
            <script src="assets/vendors/jquery.tagsinput/src/jquery.tagsinput.js"></script>
            <!-- Switchery -->
            <script src="assets/vendors/switchery/dist/switchery.min.js"></script>
            <!-- Select2 -->
            <script src="assets/vendors/select2/dist/js/select2.full.min.js"></script>
            <!-- Parsley -->
            <script src="assets/vendors/parsleyjs/dist/parsley.min.js"></script>
            <!-- Autosize -->
            <script src="assets/vendors/autosize/dist/autosize.min.js"></script>
            <!-- jQuery autocomplete -->
            <script src="assets/vendors/devbridge-autocomplete/dist/jquery.autocomplete.min.js"></script>
            <!-- starrr -->
            <script src="assets/vendors/starrr/dist/starrr.js"></script>
            <!-- Custom Theme Scripts -->
            <script src="assets/build/js/custom.min.js"></script>

</body>

</html>
