<script>
    $(window).on("load",function() {
        console.log("hello");
          event.preventDefault();

          $.ajax({
              url: "/GetNotif",
              type: "GET",
              dataType: "json",
              complete: function() {
                  console.log('process complete');
              },

              success: function(data) {
                  var wew = data[0];
                  for(var i = 0; i <= wew.length; i++)
                  {

                      $('#try').append("<li>");
                      $('#try').append("<a>");
                      $('#try').append("<span class='message'>");
                      $('#try').append(wew[i].message);
                      $('#try').append("</span>");
                      $('#try').append("</a>");
                      $('#try').append("</li>");
                      
                  }
              },

              error: function() {
                  console.log('process error');
              },
          });
      });
</script>
  
