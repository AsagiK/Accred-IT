<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <%- include ./nav.ejs %>
            <!-- page content -->
            <div class="right_col" role="main">
                <!-- top tiles 
                <div class="row tile_count">
                    <div class="col-md-4  tile_stats_count">
                        -- tasks completed --
                        <span class="count_top" style="font-size: 30px;"><i class="fa fa-tasks"></i>

                        </span>
                        <div class="count">2500 </div>
                    </div>
                    -- end of tasks completed --
                    -- Active tasks --
                    <div class="col-md-4 tile_stats_count">
                        <span class="count_top" style="font-size: 30px;"><i class="fa fa-tasks"></i> Active Activities</span>
                        <div class="count">(NUMBER OF ACTIVITIES HERE)</div>
                        <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i></i> </span>
                    </div>
                    -- end of active tasks --
                </div>
                -- /top tiles -->

                <div class="col-md-4  tile_stats_count">
                        
                        <span class="count_top" style="font-size: 30px;"><i class="fa fa-tasks"></i>
                                <%= new Date().getFullYear();%>
                        </span>
                        
                </div> 
                
             <% if (current_user[0].Role == 1 || current_user[0].Role == 2 || current_user[0].Role == 3) { %>
                <div class="row">
                    <!MEASUREMENT>
                        <div class="col-md-10 col-sm-15 col-xs-15">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>METRICS</h2>
                                    <ul class="nav navbar-right panel_toolbox">
                                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                            <ul class="dropdown-menu" role="menu">
                                                <li><a href="#">Settings 1</a>
                                                </li>
                                                <li><a href="#">Settings 2</a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                                        </li>
                                    </ul>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="dash">
                                    <!--METRIC TABLE-->  

                           

                                <% for (var mes of data) { %> 

                                    <table class="table table-bordered" style="table-layout: fixed;">
                                        <thead >
                                            <tr>
                                                <th>Metric Name</th>
                                                <th>Description</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>


                                            <tr> 
                                                
                                                <td> <%= mes.metric_Name %> </td>
                                                <td><%= mes.metric_Desc %> </td>
                                                <td><button type="submit" class="btn btn-primary">View Details</button></td> 

                                            </tr>


                                        </tbody>
                                    </table> 

                                   

                                <% } %>
                                    

                                </div> 
                            </div>
                        </div> 

               

                        <!MEASUREMENTS>
                        <div class="col-md-6">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>MEASUREMENTS</h2>
                                    <ul class="nav navbar-right panel_toolbox">
                                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                            <ul class="dropdown-menu" role="menu">
                                                <li><a href="#">Settings 1</a>
                                                </li>
                                                <li><a href="#">Settings 2</a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                                        </li>
                                    </ul>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="dash2">
                                    <!--MEASRUEMENTS-->  
                                <% for (var meas of dataB) { %> 
                                    <% for (var targets of dataG) { %>
                                    
                                        <table class="table table-bordered" style="table-layout: fixed;">
                                        <thead>
                                            <tr>
                                                <th>Measurement Name</th>
                                                <th>Description</th> 
                                                <th>Quality Target/s</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>


                                            <tr>
                                                <td> <%= meas.measurement_Name %> </td>
                                                <td><%= meas.measurement_Description %> </td> 

                                                <td>
                                                    <% if (meas.measurement_ID == targets.measurementID) { %> 
                                                        <% if (targets.target_Type == 0) { %>
                                                            <%= targets.target%> % <%= targets.target_Desc %>
                                                        <% } else if (targets.target_Type == 1) { %>
                                                            <%= targets.target%> # <%= targets.target_Desc %>
                                                        <% } %>
                                                    <%  }  else { %> 
                                                        <!-- NONE WILL DISPLAY-->
                                                    <% } %>
                                                </td>
                                                <td><button type="submit" class="btn btn-primary">View Details</button></td>
                                            </tr>


                                        </tbody>
                                    </table>

                                   
                                
                                    
                                <% } %>  
                            <% } %>      
                                    

                                </div>
                            </div>
                        </div> 

                        <!ACTIVITIES>
                        <div class="col-md-6">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>ACTIVITIES</h2>
                                    <ul class="nav navbar-right panel_toolbox">
                                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                            <ul class="dropdown-menu" role="menu">
                                                <li><a href="#">Settings 1</a>
                                                </li>
                                                <li><a href="#">Settings 2</a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                                        </li>
                                    </ul>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="dash2">
                                        <!--ACTIVITIES-->   
                                         
                                            <% for (var act of dataC) { %> 
                                                <% if (current_user[0].Group == act.activity_Member) { %>
                                        <table class="table table-bordered" style="table-layout: fixed;">
                                                <thead>
                                                    <tr>
                                                        <th>Activity Name</th>
                                                        <th>Description</th> 
                                                        <th>Deadline</th>
                                                        <th></th>
                                                    </tr>
                                                </thead> 
                                   
                                            <tbody>
    
                                                <tr>
                                                    <td> <%= act.activity_name %> </td>
                                                    <td><%= act.description %> </td>
                                                    <td><%= act.deadline %></td> 
                                                    <td><button type="submit" class="btn btn-primary">View Details</button></td>
                                                </tr>

    
                                            </tbody>
                                  
                                        </table> 

                                        <% } %>

                                 <% } %>
                                 
                                    
                                </div>
                            </div>
                        </div> 
                </div> 

                <% }  else if (current_user[0].Role == 4) { %>
                    <div class="row"> 
                            <div class="col-md-10 col-sm-15 col-xs-15">
                                    <div class="x_panel">
                                        <div class="x_title">
                                            <h2>ACTIVITIES</h2>
                                            <ul class="nav navbar-right panel_toolbox">
                                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                                    <ul class="dropdown-menu" role="menu">
                                                        <li><a href="#">Settings 1</a>
                                                        </li>
                                                        <li><a href="#">Settings 2</a>
                                                        </li>
                                                    </ul>
                                                </li>
                                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                                </li>
                                            </ul>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="dash">
                                           <!--ACTIVITIES-->   
                                         
                                            <% for (var act of dataC) { %> 
                                                <% if (current_user[0].Group == act.activity_Member) { %>
                                        <table class="table table-bordered" style="table-layout: fixed;">
                                                <thead>
                                                    <tr>
                                                        <th>Activity Name</th>
                                                        <th>Description</th> 
                                                        <th>Deadline</th>
                                                        <th></th>
                                                    </tr>
                                                </thead> 
                                   
                                            <tbody>
    
                                                <tr>
                                                    <td> <%= act.activity_name %> </td>
                                                    <td><%= act.description %> </td>
                                                    <td><%= act.deadline %></td> 
                                                    <td><button type="submit" class="btn btn-primary">View Details</button></td>
                                                </tr>

    
                                            </tbody>
                                  
                                        </table> 

                                        <% } %>

                                 <% } %>
                                    </div>
                                </div>

                        </div> 
                    </div> 

                    <!--SUBMISSIONS TABLE -->

                    <div class="row"> 
                            <div class="col-md-10 col-sm-10 col-xs-10">
                                    <div class="x_panel">
                                        <div class="x_title">
                                            <h2>SUBMISSIONS</h2>
                                            <ul class="nav navbar-right panel_toolbox">
                                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                                    <ul class="dropdown-menu" role="menu">
                                                        <li><a href="#">Settings 1</a>
                                                        </li>
                                                        <li><a href="#">Settings 2</a>
                                                        </li>
                                                    </ul>
                                                </li>
                                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                                </li>
                                            </ul>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="dash">
                                            <!--SUBMISSIONS-->   
                                            <% for (var pending of dataF) { %> 
                                            <% if (current_user[0].User_ID == pending.user_ID) { %>
                                            <table class="table table-bordered" style="table-layout: fixed;"> 
                                                
                                                    <thead>
                                                        <tr>
                                                            <th>Activity Name</th>
                                                            <th>Status</th> 
                                                            <th>Suggested Score</th>
                                                            <th>Date Updated</th>
                                                            <th>Comments</th>
                                                            <th>Document Name</th>>
                                                            <th></th>
                                                        </tr>
                                                    </thead> 
                                       
                                                <tbody>
        
                                                    <tr>
                                                        <td> <%= pending.activity_name %> </td>
                                                        <td><% if (pending.status == 0) { %> 
                                                                P E N D I N G
                                                            <% } else if (pending.status == 1) { %>
                                                                A P P R O V E D 
                                                            <% } else if (pending.status == 2) { %>
                                                                D I S A P P R O V E D
                                                            <% } %>
                                                        </td> 
                                                        <td><%= pending.suggested_Score %></td>
                                                        <td><%= pending.dateupdated %></td>
                                                        <td><%= pending.comment %></td> 
                                                        <td><%= pending.Document_Name %></td>
                                                         
                                                        <td><button type="submit" class="btn btn-primary">View Details</button></td>
                                                    </tr>

        
                                                </tbody>
                                      
                                            </table> 

                                        <% } %> 
                                        <% } %>
                                        
                                    </div>
                                </div>

                        </div> 
                    </div>


                
                <% } %>
                <!-- /page content -->

                <!-- footer content -->
                <footer>
                    <div class="pull-right">
                        Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
                    </div>
                    <div class="clearfix"></div>
                </footer>
                <!-- /footer content -->
            </div>
        </div>

