<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <%- include ./nav.ejs %>
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="clearfix"></div>



                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2><%= dataB[0].source_Name %></h2>
                                    <ul class="nav navbar-right panel_toolbox">
                                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                                aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                            <ul class="dropdown-menu" role="menu">
                                                <li><a href="#">Settings 1</a>
                                                </li>
                                                <li><a href="#">Settings 2</a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                                        </li>
                                    </ul>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
                                    <br />
                                    <div class="form-group">
                                        <p class="control-label col-md-12 col-sm-12 col-xs-12">
                                            <%= dataB[0].source_Description %></span>
                                        </p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_content">

                                    <!BUTTONS FOR CREATE OF QUALITYMETRIC AND CYCLE TIME>
                                        <button type="button" class="btn btn-primary" data-toggle="modal"
                                            data-target=".bs-example-modal-lg">
                                            Create Metric
                                        </button>

                                        <!view table for users>
                                            <table class="table table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>Name</th>
                                                        <th>Description</th>
                                                        <th>Priority Level</th>
                                                        <th>Group Assigned</th>
                                                        <th>Date</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for (var metric of data) { 
                                                        
                                                        %>

                                                    <tr>

                                                        <td><%= metric.metric_Name %></td>
                                                        <td><%= metric.metric_Desc %></td>
                                                        <td><%= metric.priority_Level %></td>
                                                        <td><%= metric.Group_Name %></td>
                                                        <td><%= metric.date_insert.toString().substring(0,15) %></td>
                                                        <td>

                                                            <div class="form-group">
                                                                <div>
                                                                    <!BUTTONS FOR EDIT AND PLAN>
                                                                        <form method="get" action="editmetric">
                                                                            <input type="hidden" name="UID"
                                                                                value="<%= metric.metric_ID %>">
                                                                            <button type="submit"
                                                                                class="btn btn-primary">Edit
                                                                                Metric</button>
                                                                        </form>

                                                                        <br /><br />
                                                                        <form method="get" action="PlanPage">
                                                                            <input type="hidden" name="PID"
                                                                                value="<%= metric.metric_ID %>">
                                                                            <button type="submit"
                                                                                class="btn btn-primary">Add
                                                                                Measurement</button>
                                                                        </form>
                                                                        <br /><br />
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>

                                                    <% } %>
                                                </tbody>
                                            </table>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>


                <!-- /page content -->

                <!-- footer content -->
                <footer>
                    <div class="pull-right">
                        Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
                    </div>
                    <div class="clearfix"></div>
                </footer>
                <!-- /footer content -->
            </div>
        </div>

        <!--Modal for Create -->
        <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">Ã—</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">
                            Create Metric
                        </h4>
                    </div>
                    <div class="modal-body">
                        <form id="CreateMetric" data-parsley-validate class="form-horizontal form-label-left"
                            action="addmetrictosource" method="POST">
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                    for="first-name">Source<span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="hidden" id="source" name="source" 
                                        class="form-control col-md-7 col-xs-12"
                                        value="<%= dataB[0].source_ID %>" readonly />
                                    <input type="text" id="" name=""
                                        class="form-control col-md-7 col-xs-12"
                                        placeholder="<%= dataB[0].source_Name %>" readonly />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Metric
                                    Name<span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" id="metricName" name="metricName"
                                        required="required" class="form-control col-md-7 col-xs-12"
                                        placeholder="Name" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Quality Target"
                                    class="control-label col-md-3 col-sm-3 col-xs-12">Description<span
                                        class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <textarea class="form-control" rows="3" id="metricDesc"
                                        name="metricDesc" placeholder="Description" required="required"
                                        onkeyup="textAreaAdjust(this)" style="overflow:hidden"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Priority
                                    Level<span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select class="form-control" name="priority">
                                        <option value="High">High</option>
                                        <option value="Medium">Medium</option>
                                        <option value="Low">Low</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Assign Group<span
                                        class="required">*</span>
                                </label>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <select class="form-control" placeholder="Select Area" name="group">


                                            <!-- code for taking data from sql to show on page-->
                                            <% for(var group of dataC){ %>
                                            <option value=<%=group.Group_ID %>> <%= group.Group_Name %>
                                            </option>
                                            <% } %>

                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">
                                    Close
                                </button>
                                <button type="submit" class="btn btn-primary" form="CreateMetric">
                                    Submit
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <!-- jQuery -->
        <script src="assets/vendors/jquery/dist/jquery.min.js"></script>
        <!-- Bootstrap -->
        <script src="assets/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
        <!-- FastClick -->
        <script src="assets/vendors/fastclick/lib/fastclick.js"></script>
        <!-- NProgress -->
        <script src="assets/vendors/nprogress/nprogress.js"></script>
        <!-- bootstrap-progressbar -->
        <script src="assets/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
        <!-- iCheck -->
        <script src="assets/vendors/iCheck/icheck.min.js"></script>
        <!-- bootstrap-daterangepicker -->
        <script src="assets/vendors/moment/min/moment.min.js"></script>
        <script src="assets/vendors/bootstrap-daterangepicker/daterangepicker.js"></script>
        <!-- bootstrap-wysiwyg -->
        <script src="assets/vendors/bootstrap-wysiwyg/js/bootstrap-wysiwyg.min.js"></script>
        <script src="assets/vendors/jquery.hotkeys/jquery.hotkeys.js"></script>
        <script src="assets/vendors/google-code-prettify/src/prettify.js"></script>
        <!-- jQuery Tags Input -->
        <script src="assets/vendors/jquery.tagsinput/src/jquery.tagsinput.js"></script>
        <!-- Switchery -->
        <script src="assets/vendors/switchery/dist/switchery.min.js"></script>
        <!-- Select2 -->
        <script src="assets/vendors/select2/dist/js/select2.full.min.js"></script>
        <!-- Parsley -->
        <script src="assets/vendors/parsleyjs/dist/parsley.min.js"></script>
        <!-- Autosize -->
        <script src="assets/vendors/autosize/dist/autosize.min.js"></script>
        <!-- jQuery autocomplete -->
        <script src="assets/vendors/devbridge-autocomplete/dist/jquery.autocomplete.min.js"></script>
        <!-- starrr -->
        <script src="assets/vendors/starrr/dist/starrr.js"></script>
        <!-- Custom Theme Scripts -->
        <script src="assets/build/js/custom.min.js"></script>

</body>

</html>