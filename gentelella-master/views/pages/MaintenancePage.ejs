                                $(".add-row-Role").click(function test() {
                    
                    //alert("testing adding activities");
                   
                    var role = document.getElementById("role");
                    var rrole = role.options[role.selectedIndex].value;
                    var status = document.getElementById("status");
                    var sstatus = status.options[status.selectedIndex].value;

                    var roleID = rrole.substr(0, rrole.indexOf('~'));
                    var roleName = rrole.substr(rrole.lastIndexOf('~') + 1);
                    var statusID = sstatus.substr(0, sstatus.indexOf('~'));
                    var statusName = sstatus.substr(sstatus.lastIndexOf('~') + 1);
                    
                    //console.log(activityName);
                    var markup = "<tr><td>" + roleID + "</td><td>" + roleName + "</td><td>" + statusName + "</td><td>" + statusID +
                        "</td><td><button type='button' class='delete-row btn btn-danger btn-sm' onclick='deleteRow(this)'>Remove</button></td></tr>";
                    var table = document.getElementById("tableRole")
                    $("#role option:selected").remove();
                    
                    $(table).append(markup);
                    
                });


                            } );

                function deleteRow(r) {
                    //console.log("testing delete click");
                r.closest("tr").remove();
                
                var table = document.getElementById("tableRole");
                var roleID = r.closest("tr").cells[0].innerHTML;
                var roleName = r.closest("tr").cells[1].innerHTML;
            
                var dropdown = document.getElementById("role");
                var option = document.createElement("option");
                option.innerHTML = roleName;
                option.value = roleID + "~" + roleName; 
                dropdown.options.add(option);
                //console.log("cell weight: " + val);

                //total = +total - +val;
                //console.log("Minused total: " + total);
            }

