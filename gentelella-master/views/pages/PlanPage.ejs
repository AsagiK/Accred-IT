<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <%- include ./nav.ejs %>
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="col-md-9">
                            <h3>Planning</h3>
                            <h3> Recommendation Name: <%= dataB[0].recommendation_Name %></h3>
                        </div>
                        <div class="col-md-3">
                            <a type="button" class="btn btn-primary btn-lg" href="/RecommendationNonAjax"
                                style="float: right">Go Back</a><br /><br />
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">

                                <div>

                                    <button type="button" class="btn btn-primary" data-toggle="modal"
                                        data-target=".createCycle">
                                        Create Cycle
                                    </button>

                                    <div class="" role="tabpanel" data-example-id="togglable-tabs">
                                        <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                                            <li role="presentation" class="">
                                                <a href="#tab_content1" id="home-tab" role="tab" data-toggle="tab"
                                                    aria-expanded="true">View
                                                    Plan</a>
                                            </li>
                                            <li role="presentation" class="">
                                                <a href="#tab_content2" role="tab" id="profile-tab" data-toggle="tab"
                                                    aria-expanded="false">Create
                                                    Plan</a>
                                            </li>
                                            <!--li role="presentation" class="">
                                                <a href="#tab_content3" role="tab" id="profile-tab2" data-toggle="tab"
                                                    aria-expanded="false">Assign to Group</a>
                                            </li-->
                                        </ul>

                                        <!VIEW PLANS TAB>
                                            <div id="myTabContent" class="tab-content">
                                                <div role="tabpanel" class="tab-pane fade active in" id="tab_content1"
                                                    aria-labelledby="home-tab">
                                                    <table class="table table-bordered">
                                                        <thead>
                                                            <tr>
                                                                <th>ID</th>
                                                                <th>Plan Name</th>
                                                                <th>Plan Description</th>
                                                                <th>Group Assigned</th>
                                                                <th>Priority Level</th>
                                                                <th>Cycle Plan</th>
                                                                <th></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% for (var plan of data) { %>
                                                            <form method="get" action="assignplantogroup">
                                                                <tr>
                                                                    <input type="hidden" name="UIDRecommendation"
                                                                        value="<%= dataB[0].recommendation_ID %>">
                                                                    <input type="hidden" name="PID"
                                                                        value="<%= plan.Plan_ID %>">
                                                                    <td><%= plan.plan_ID %></td>
                                                                    <td><%= plan.PlanName %></td>
                                                                    <td><%= plan.PlanDescription %></td>
                                                                    <td><%= plan.Group_Name %></td>
                                                                    <td><%= plan.PriorityLevel %></td>
                                                                    <td><%= plan.CycleTime %>: <%= plan.start_Date %> -
                                                                        <%= plan.end_Date %></td>

                                                                    <td><button type="submit"
                                                                            class="btn btn-primary">Assign
                                                                            Group</button></td>
                                                                </tr>
                                                            </form>
                                                            <% } %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <!CREATE PLAN TAB>
                                                    <div role="tabpanel" class="tab-pane fade" id="tab_content2"
                                                        aria-labelledby="profile-tab">
                                                        <form id="create" data-parsley-validate
                                                            class="form-horizontal form-label-left" method="post"
                                                            action="SendPlan">

                                                            <!--Plan Name input field-->
                                                            <div class="form-group">
                                                                <label for="Plan Name"
                                                                    class="control-label col-md-3 col-sm-3 col-xs-12">
                                                                    Plan Name: <span class="required">*</span></label>
                                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                                    <input type="text" id="Plan Name" name="PlanName"
                                                                        required="required"
                                                                        class="form-control col-md-7 col-xs-12"
                                                                        placeholder="Plan Name">
                                                                </div>
                                                            </div>

                                                            <!--Plan Description field-->
                                                            <div class="form-group">
                                                                <label for="Plan Description"
                                                                    class="control-label col-md-3 col-sm-3 col-xs-12">Plan
                                                                    Description:
                                                                    <span class="required">*</span></label>
                                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                                    <textarea class="form-control" rows="3"
                                                                        id="PlanDesc" name="PlanD"
                                                                        placeholder="Plan Description"
                                                                        required="required"
                                                                        onkeyup="textAreaAdjust(this)"
                                                                        style="overflow:hidden"></textarea>
                                                                </div>
                                                            </div>
                                                            <!General Objective input field>
                                                                <div class="form-group">
                                                                    <label
                                                                        class="control-label col-md-3 col-sm-3 col-xs-12"
                                                                        for="Task Name">General Objective: <span
                                                                            class="required">*</span>
                                                                    </label>
                                                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                                                        <input type="text" id="Task Name" name="GenObj"
                                                                            required="required"
                                                                            class="form-control col-md-7 col-xs-12"
                                                                            placeholder="General Objective">
                                                                    </div>
                                                                </div>
                                                                <!--Measurement input field-->
                                                                <div class="form-group">
                                                                    <label for="Quality Target"
                                                                        class="control-label col-md-3 col-sm-3 col-xs-12">Measurement:
                                                                        <span class="required">*</span></label>
                                                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                                                        <textarea class="form-control" rows="3"
                                                                            id="TaskDesc" name="PlanM"
                                                                            placeholder="Measurement"
                                                                            required="required"
                                                                            onkeyup="textAreaAdjust(this)"
                                                                            style="overflow:hidden"></textarea>
                                                                    </div>
                                                                </div>
                                                                <!--Base Formula input field-->
                                                                <div class="form-group">
                                                                    <label for="Quality Target"
                                                                        class="control-label col-md-3 col-sm-3 col-xs-12">Base
                                                                        Formula: </label>
                                                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                                                        <textarea class="form-control" rows="3"
                                                                            id="General Objective" name="BaseFormula"
                                                                            placeholder="Base Formula"
                                                                            onkeyup="textAreaAdjust(this)"
                                                                            style="overflow:hidden"></textarea>
                                                                    </div>
                                                                </div>
                                                                <!--Quality Target Input field-->
                                                                <div class="form-group">
                                                                    <label for="Quality Target"
                                                                        class="control-label col-md-3 col-sm-3 col-xs-12">Quality
                                                                        Target: </label>
                                                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                                                        <textarea class="form-control" rows="3"
                                                                            id="Measurement"
                                                                            placeholder="Quality Target"
                                                                            name="QualityTarget"
                                                                            onkeyup="textAreaAdjust(this)"
                                                                            style="overflow:hidden"></textarea>
                                                                    </div>
                                                                </div>
                                                                <!--Procedures input field-->
                                                                <div class="form-group">
                                                                    <label
                                                                        class="control-label col-md-3 col-sm-3 col-xs-12">Procedures:
                                                                    </label>
                                                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                                                        <textarea class="form-control" rows="3"
                                                                            id="Quality Targets"
                                                                            placeholder="Procedures" name="Procedures"
                                                                            onkeyup="textAreaAdjust(this)"
                                                                            style="overflow:hidden"></textarea>
                                                                    </div>
                                                                </div>

                                                                <!--Buttons to submit-->

                                                                <div
                                                                    class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                                                    <button class="btn btn-primary"
                                                                        type="reset">Reset</button>
                                                                    <button type="submit" form="create"
                                                                        class="btn btn-primary">Submit</button>
                                                                </div>
                                                                <input type="hidden" name="GID"
                                                                    value="<%= dataB[0].group_ID %>">
                                                                <input type="hidden" name="RID"
                                                                    value="<%= dataB[0].recommendation_ID %>">
                                                        </form>

                                                    </div>
                                            </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- /page content -->

            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Gentelella - Bootstrap Admin Template by
                    <a href="https://colorlib.com">Colorlib</a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    <!--MODAL FOR CREATE CYCLE-->
    <div class="modal fade createCycle" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal2" value="Edit">
                            <span aria-hidden="true">Ã—</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel2">Create Cycle</h4>
                    </div>
                    <div class="modal-body">
                        <form id="CreateCycle" data-parsley-validate class="form-horizontal form-label-left"
                            action="addcycle" method="POST">
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                    for="first-name">Cycle
                                    Name<span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" id="first-name" name="cycleName" required="required"
                                        class="form-control col-md-7 col-xs-12" placeholder="Name" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                    for="first-name">Set Cycle
                                    Time:<span class="required"></span>
                                </label>
                                <form class="form-group">
                                    <fieldset>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="controls">
                                                <div class="input-prepend input-group">
                                                    <span class="add-on input-group-addon"><i
                                                            class="glyphicon glyphicon-calendar fa fa-calendar"></i></span>
                                                    <input type="text"
                                                        class="form-control has-feedback-left"
                                                        id="single_cal1" placeholder="First Name"
                                                        aria-describedby="inputSuccess2Status">
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">
                                    Close
                                </button>
                                <button type="submit" class="btn btn-primary" form="CreateCycle">
                                    Submit
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


    <!script for dynamic text area>
        <script>
            function textAreaAdjust(o) {
                o.style.height = "1px";
                o.style.height = (25 + o.scrollHeight) + "px";
            }
        </script>

